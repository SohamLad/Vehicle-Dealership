<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._7_AddVehicleActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/addVehicleTitleTextView"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_title"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="100dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_make"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/addVehicleMakeTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="100dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_model"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/addVehicleModelTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="150dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_condition"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="198dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/addVehicleConditionTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="198dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_engine"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="245dp"
                    android:layout_marginLeft="10dp"
                    tools:ignore="MissingConstraints"/>

                <EditText
                    android:id="@+id/addVehicleEngineTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
