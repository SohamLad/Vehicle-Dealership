                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="245dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_year"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="295dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/addVehicleYearTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="number"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="295dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_number_of_doors"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="345dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/addVehicleNumberOfDoorsTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="number"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="345dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_price"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="390dp"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/addVehiclePriceTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="number"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="390dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_color"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="445dp"
                    tools:ignore="MissingConstraints"/>

                <EditText
                    android:id="@+id/addVehicleColorTextView"
                    android:layout_width="190dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:inputType="text"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="445dp"
                    tools:ignore="MissingConstraints"/>

                <TextView
                    android:id="@+id/addVehicleImageTextView"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/add_vehicle_image"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="500dp"
                    tools:ignore="MissingConstraints"/>

                <ImageView
                    android:id="@+id/uploadedimage"
                    android:layout_marginTop="500dp"
                    android:layout_marginLeft="190dp"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:text="Vehicle Image"
                    android:textSize="23sp" />

                <Button
                    android:id="@+id/addVehicleImageButton"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="610dp"
                    android:onClick="onUploadImageClick"
                    android:text="@string/add_vehicle_image_button"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints,OnClick" />


                <Button
                    android:id="@+id/addVehicleButton"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="650dp"
                    android:text="@string/add_vehicle_button"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

